<h1>Books</h1>
<%= link_to "New book", new_book_path, class:"btn btn-secondary mb-3" %>


<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
      <th scope="row"><%= book.id %></th>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Show", book %></td>
      <td><%= link_to "Delete", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
