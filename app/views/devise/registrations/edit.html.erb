<div class="container bg-secondary-subtle px-5 py-3 rounded-4 shadow">
  <h2>Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field my-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control border-dark-subtle bg-body-tertiary" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field my-2">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control border-dark-subtle bg-body-tertiary" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field my-2">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control border-dark-subtle bg-body-tertiary" %>
    </div>

    <div class="field my-2">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control border-dark-subtle bg-body-tertiary" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class:"btn btn-primary my-2" %>
    </div>
  <% end %>

  <div class="card bg-secondary-subtle shadow-sm mt-2 mb-3">
    <div class="card-header">
      <h5 class="mt-2">Cancel my account</h5>
    </div>
    <div class="card-body">
      <p class="card-text">Unhappy?</p>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>
    </div>
  </div>

  <%= link_to "Back", :back %>
</div>